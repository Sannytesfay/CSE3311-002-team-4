<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro"
    tools:context=".weeklyWorkout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menubutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/menu" />

            <ImageView
                android:id="@+id/gymitlogo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleX="3"
                android:scaleY="3"
                android:src="@drawable/gymitlogofinalwhite" />

        </LinearLayout>

        <TextView
            android:text="Day 1"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day1"/>

        <TextView
            android:text="Day 2"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day1"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day2"/>

        <TextView
            android:text="Day 3"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day2"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day3"
            />

        <TextView
            android:text="Day 4"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day3"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day4"/>

        <TextView
            android:text="Day 5"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day4"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day5"/>

        <TextView
            android:text="Day 6"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day5"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/day6"/>

        <TextView
            android:id="@+id/day7"
            android:text="Day 7"
            android:background="#DDDDDD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/day6"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>